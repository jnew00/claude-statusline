{
  "name": "claude-plan-usage",
  "version": "1.0.0",
  "description": "Scrape Claude Max plan usage percentages from the web UI",
  "type": "module",
  "main": "dist/claude-plan-usage.js",
  "bin": {
    "claude-plan-usage": "./dist/claude-plan-usage.js",
    "claude-plan-usage-status": "./bin/claude-plan-usage-status"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/claude-plan-usage.js",
    "dev": "tsx src/claude-plan-usage.ts",
    "dev:headed": "tsx src/claude-plan-usage.ts --headed"
  },
  "keywords": [
    "claude",
    "anthropic",
    "usage",
    "scraper",
    "playwright"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "playwright": "^1.40.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0"
  }
}
